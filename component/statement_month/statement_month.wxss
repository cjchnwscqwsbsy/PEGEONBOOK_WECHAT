/* component/statement_month/statement_month.wxss */
.month-container{
  height: 100%;
  width: 100%;
}
.month-inner-container{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}
.statement-month{
  width: 40px;
  height: 25px;
  border-radius: 100%;
  background-color: #dddddd;
  font-size: 13px;
  display: flex;
  justify-content: center;
  line-height: 25px;
}
.month-line{
  background-color: black;
  width: 2px;
  height: 25px;
}
