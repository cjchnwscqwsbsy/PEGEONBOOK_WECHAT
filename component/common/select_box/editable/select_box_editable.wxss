/* component/common/select_box/editable/select_box_editable.wxss */
.select-box-container{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.select-box-value{
  border-radius: 16rpx;
  border-style: solid;
  border-width: 4rpx;
  border-color: #a8a8a8;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.select-box-option-list{
  padding-left: 25rpx;
  padding-right: 25rpx;
  position: absolute;
  top: 90rpx;
  width: 200%;
  background: rgb(255, 237, 224);
  border-style: solid;
  border-width: 4rpx;
  border-color: #a8a8a8;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 1;
  font-size: 30rpx;
}
.select-box-option-item{
  display: flex;
  flex-wrap: nowrap;
}
.select-box-option-item-modify{
  margin-left: 40rpx;
  width: auto;
}
.select-box-option-item-delete{
  margin-left: 10rpx;
  width: auto;
}
