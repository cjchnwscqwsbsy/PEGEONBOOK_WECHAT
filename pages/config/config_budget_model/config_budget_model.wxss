/* pages/config/config_budget_model/config_budget_model.wxss */
.config-budget-model-container{
  padding-right: 30rpx;
  padding-left: 30rpx;
}
.config-budget-model-title{
  background: #07c160;
  width: 100%;
  height: 10%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.config-budget-model-other{
  background: #abfadf;
  width: 100%;
  height: 13%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.config-budget-model-other-term{
  /*background: #999999;*/
  display: flex;
  width: 100%;
}
.config-budget-model-other-start{
  /*background: #3f74c1;*/
  display: flex;
  width: 100%;
}

.config-budget-model-detail{
  background: #1989fa;
  width: 100%;
  height: 70%;
}
.config-budget-model-buttons{
  background: #999999;
  display: flex;
  width: 100%;
  height: 7%;
  align-items: center;
}

input{
  border-style: solid;
  border-width: 2rpx;
}
button{
  width: 150rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
view{
  display: flex;
  align-items: center;
}