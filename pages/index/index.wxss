.index-add-statement{
  width: 80rpx;
  height: 80rpx;
  border-radius: 100rpx;
  position: absolute;
  /*background-color: black;*/
  z-index: 1;
  bottom: 25rpx;
  right: 50rpx;
}
.index-book-container{
  /*background-color: #999999;*/
  width: 100%;
  height: 10%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.index-book{
  border-radius: 16rpx;
  border-style: solid;
  border-width: 4rpx;
  border-color: #a8a8a8;
  width: 25%;
  height: 43%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.index-bookList{
  /*width: 40%;*/
  padding-left: 25rpx;
  padding-right: 25rpx;
  position: absolute;
  top: 90rpx;
  background: rgb(255, 237, 224);
  border-style: solid;
  border-width: 4rpx;
  border-color: #a8a8a8;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 1;
  font-size: 30rpx;
}
.index-bookList-item{
  display: flex;
}
.index-bookList-item-modify{
  margin-left: 40rpx;
}
.index-bookList-item-delete{
  margin-left: 10rpx;
}

.index-budget-container{
  display: flex;
  width: 100%;
  height: 12%;
  justify-content: center;
}
.index-budget-income{
  height: 100%;
  width: 35%;
  /*background-color: #1989fa;*/
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.index-budget-budget{
  border-radius: 25%;
  height: 100%;
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.index-budget-budget-circle{
  border-style: solid;
  border-width: 4rpx;
  border-radius: 75%;
  background-color: #abfadf;
  height: 75%;
  width: 75%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.index-budget-budget-line{
  background-color: black;
  width: 4rpx;
  height: 25%;
}
.index-budget-spend{
  /*background-color: #1989fa;*/
  height: 100%;
  width: 35%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.index-statement-container{
  height: 78%;
  width: 100%;
}