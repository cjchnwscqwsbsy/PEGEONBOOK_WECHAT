.index-book-container{
  /*background-color: #999999;*/
  width: 100%;
  height: 10%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.index-book{
  border-radius: 16rpx;
  border-style: solid;
  border-width: 4rpx;
  border-color: #a8a8a8;
  width: 25%;
  height: 43%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.index-booklist{
  position: absolute;
  bottom: -30rpx;
  background: #1989fa;
}

.index-budget-container{
  display: flex;
  width: 100%;
  height: 12%;
  justify-content: center;
}
.index-budget-income{
  height: 100%;
  width: 35%;
  /*background-color: #1989fa;*/
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.index-budget-budget{
  border-radius: 25%;
  height: 100%;
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.index-budget-budget-circle{
  border-style: solid;
  border-width: 4rpx;
  border-radius: 75%;
  background-color: #abfadf;
  height: 75%;
  width: 75%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.index-budget-budget-line{
  background-color: black;
  width: 4rpx;
  height: 25%;
}
.index-budget-spend{
  /*background-color: #1989fa;*/
  height: 100%;
  width: 35%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.index-statement-container{
  height: 78%;
  width: 100%;
}